<%# <%= debug session[:cart] %>

<details>
  <summary>Shopping Cart</summary>
  <% if @cart.empty? %>
    <p>No items in cart yet.</p>
  <% else %>
    <ul>
      <% @cart.each do |product| %>
        <li><%= product.name %></li>
      <% end %>
    </ul>
  <% end %>
</details>

<% if @products.empty? %>
  <p> No products to show at this time.</p>
<% else %>
  <div class="columns is-multiline">
    <%= render @products %>
  </div>
<% end %>
<%= paginate @products %>